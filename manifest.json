{
  "manifest_version": 2,
  "name": "YouTube Logo Replacer — Krew762",
  "version": "1.0",
  "description": "Заменяет логотип YouTube на настраиваемый текст",
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Настройки логотипа"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["storage", "tabs", "*://*.youtube.com/*"],
  "applications": {
    "gecko": {
      "id": "krew762-yt-replacer@example.com",
      "strict_min_version": "68.0"
    }
  },

   "icons": {
    "48": "logo48.png",
    "64": "logo64.png",
    "72": "logo72.png",
    "96": "logo96.png",
    "128": "logo128.png",
    "256": "logo256.png"
  },
  "data_collection_permissions": {
    "description": "Это расширение не собирает и не передаёт никакие данные. Все настройки хранятся локально в вашем браузере.",
    "permissions": []
  }
}