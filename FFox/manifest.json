{
  "manifest_version": 2,
  "name": "YouTube Logo Replacer",
  "version": "1.1",
  "description": "Заменяет логотип YouTube на настраиваемый текст",
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Настройки логотипа"
  },
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "permissions": ["storage", "tabs", "*://*.youtube.com/*"],
  "browser_specific_settings": {
    "gecko": {
      "id": "krew762-yt-replacer@example.com",
      "strict_min_version": "68.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "icons": {
    "48": "logo48.png",
    "64": "logo64.png",
    "72": "logo72.png",
    "96": "logo96.png",
    "128": "logo128.png",
    "256": "logo256.png"
  }
}